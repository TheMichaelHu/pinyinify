{
  "manifest_version": 2,

  "name": "Pinyinify",
  "description": "This extension replaces all Chinese characters with pinyin",
  "version": "1.0",
  "content_scripts": 
    [
      {
        "matches": ["*://*/*"],
        "js": ["contentscript.js"],
        "run_at" : "document_idle",
        "all_frames": true
      }
    ],
  "offline_enabled": true
}